doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='apple-mobile-web-app-capable', content='yes')
    title
    link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700', rel="stylesheet")
    link(rel='stylesheet', href='styles/main.css')
    script(defer, src='scripts/main.js')
  body
    div.splash
      div.splash__logo
      h1.splash__title
        span.splash__title--mimi Mimi
        span.splash__title--games Games
      div.splash__loader
        ul
          li Set up the playground...
          li Preparing dry cat food...
          li Putting water...
          li Petting the cat...
    div.board.board--victory
      div.board__deck
        - var n = 0;
        while n < 24
          a(class="card")
            span(class="card__flipper")
              span(class="card__flipper--front")
              span(class="card__flipper--back")
          - n++;
      div.board__playerinfo
        div.playerinfo__host
        div.playerinfo__message
            p.bubble